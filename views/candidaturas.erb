<div class="row">
	<div class="col">
		<div class="card shadow">
			<div class="card-header border-0">
				<h3 class="mb-0"><%= @titulo %></h3>
			</div>
			<div class="table-responsive">
				<table class="table align-items-center table-flush">
					<thead class="thead-light">
						<tr>
							<th scope="col">Título</th>
							<th scope="col">Nível</th>
							<th scope="col">Tipo contrato</th>
							<th scope="col">Remoto</th>
							<th scope="col">Local</th>
							<th scope="col">Salário</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
					<% if @candidaturas.count > 0 %>
						<% for candidatura in @candidaturas %>
						<tr>
							<th scope="row">
								<div class="align-items-center">
									<span class="mb-0 text-sm"><%= candidatura.vaga.titulo %></span>
								</div>
							</th>
							<td>
								<span class="text-sm">
									<%= candidatura.vaga.nivel %>
								</span>
							</td>
							<td>
								<span class="text-sm">
									<%= candidatura.vaga.tipoContrato %>
								</span>
							</td>
							<td>
								<span class="text-sm">
									<%= candidatura.vaga.remoto %>
								</span>
							</td>
							<td>
								<span class="text-sm">
									<%= candidatura.vaga.local %>
								</span>
							</td>
							<td>
								<span class="text-sm">
									<%= candidatura.vaga.salario %>
								</span>
							</td>
							<td class="text-right">
								<div class="dropdown">
									<a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i class="fas fa-ellipsis-v"></i>
									</a>
									<div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
										<a class="dropdown-item" href="#">Action</a>
										<a class="dropdown-item" href="#">Another action</a>
										<a class="dropdown-item" href="#">Something else here</a>
									</div>
								</div>
							</td>
						</tr>
						<% end %>
					<% else %>
						<tr>
							<td></td>
							<td></td>
							<td class="text-right">
								<span class="text-lg">
									Nenhuma candidatura realizada!
								</span>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div class="card-footer py-4">
				<nav aria-label="...">
					<ul class="pagination justify-content-end mb-0">
						<li class="page-item disabled">
						<a class="page-link" href="#" tabindex="-1">
							<i class="fas fa-angle-left"></i>
							<span class="sr-only">Previous</span>
						</a>
						</li>
						<li class="page-item active">
						<a class="page-link" href="#">1</a>
						</li>
						<li class="page-item">
						<a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
						</li>
						<li class="page-item"><a class="page-link" href="#">3</a></li>
						<li class="page-item">
						<a class="page-link" href="#">
							<i class="fas fa-angle-right"></i>
							<span class="sr-only">Next</span>
						</a>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>