<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary shadow border-0">
            <div class="card-body px-lg-5 pt-lg-5">
                <div class="text-center text-muted mb-4">
                    <h2>Logar com as credenciais</h2>
                </div>
                <form role="form" action="/login" method="POST">
                    <div class="row">
                        <div class="col-md-3">
                        </div>
                        <div class="custom-control custom-radio mb-3 col-md-3">
                            <input name="tipoUsuario" class="custom-control-input" id="empresa" type="radio" value="empresa">
                            <label class="custom-control-label" for="empresa">Empresa</label>
                        </div>  
                        <div class="custom-control custom-radio mb-3 col-md-4">
                            <input name="tipoUsuario" class="custom-control-input" value="candidato" id="candidato" type="radio" checked="">
                            <label class="custom-control-label" for="candidato">Candidato</label>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            <input class="form-control" placeholder="Nome de usuário" type="text" name="login" id="login" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                            </div>
                            <input class="form-control" placeholder="Senha" type="password" name="senha" id="senha" required>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-default my-4">Logar</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12 text-center">
                <a href="/cadastro" class="text-light">
                    <small>Não possui conta? Criar conta</small>
                </a>
            </div>
        </div>
    </div>
</div>